extends ../layout/index

block contenido
    div.py-10
    h1.text-4xl.my-10.font-extrabold.text-center Bienes
        span.font-normal Raices
    h2.text-center.text-2xl.font-extrabold=pagina

    if errores
        div(class="max-w-md mx-auto my-10")
            each error in errores
                p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

    div.mt-8.mx-auto.max-w-md
        div.bg-white.py-8.px-4.shadow
            form.space-y-5(action="/auth/login" method="POST")
                input(type="hidden" name="_csrf" value=csrfToken)
                div
                    label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email de registro
                    input#email.w-full.px-3.py-4.border.border-gray-300.rounded-md.placehorder-gray-400(placeholder="Tu email" type="email" name="email")
                div
                    label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Password
                    input#password.w-full.px-3.py-4.border.border-gray-300.rounded-md.placehorder-gray-400(placeholder="Tu password" type="password" name="password")

                div.flex.items-center.justify-between
                    a(href="/auth/registro" class="text-gray-500 text-xs") No tienes cuenta? Crea una cuenta
                    a(href="/auth/olvide-password" class="text-gray-500 text-xs") Olvide mi password
                
                input(value="Iniciar Sesi√≥n" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer text-center" type="submit")